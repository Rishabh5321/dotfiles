// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "edit_predictions": {
    "provider": "zed",
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "agent": {
    "model_parameters": [],
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    }
  },
  "icon_theme": "Material Icon Theme",
  "git_panel": {
    "dock": "right"
  },
  "base_keymap": "VSCode",
  "file_finder": {
    "modal_width": "medium"
  },
  "vim_mode": false,
  "vim": {
    "enable_vim_sneak": true
  },
  "relative_line_numbers": "enabled",
  "tab_bar": {
    "show": true
  },
  "scrollbar": {
    "show": "never"
  },
  "tabs": {
    "show_diagnostics": "errors"
  },
  // "indent_guides": {
  //   "enabled": true,
  //   "coloring": "indent_aware"
  // },
  "inlay_hints": {
    "enabled": true
  },
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  "ssh_connections": [
    {
      "host": "server",
      "username": "rishabh",
      "projects": [
        {
          "paths": ["/mnt/Docker/Docker/Docker-Media-Template"]
        }
      ]
    }
  ],
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Dark"
  },
  "languages": {
    "Python": {
      "formatter": { "language_server": { "name": "ruff" } },
      "language_servers": ["pyright", "ruff"]
    },
    "Nix": {
      "language_servers": ["nil"],
      "formatter": {
        "external": {
          "command": "nixpkgs-fmt",
          "arguments": []
        }
      },
      "format_on_save": "on",
      "tab_size": 2,
      "hard_tabs": false
    }
  },
  // Use zed commit editor
  // "terminal": {
  //   "font_family": "Aleo",
  //   "env": {
  //     "EDITOR": "zed --wait"
  //   }
  // },
  "lsp": {
    "nil": {
      "initialization_options": {
        "formatting": {
          "command": ["nixpkgs-fmt"]
        },
        "nix": {
          "flake": {
            "autoArchive": true
            // "autoEvalInputs": true
          }
        }
      }
    }
  },
  // Optional: File associations for Nix files
  "file_types": {
    "Nix": ["nix", "*.nix"],
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  // Turn off telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "project_panel": {
    "hide_gitignore": false,
    "button": true,
    "dock": "left",
    "git_status": true
  },
  // Move some unnecessary panels to the left
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  }
  // "outline_panel": {
  //   "dock": "right"
  // },
  // "collaboration_panel": {
  //   "dock": "left"
  // }
}
