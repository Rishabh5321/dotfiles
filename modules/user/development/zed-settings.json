{
  "edit_predictions": {
    "provider": "zed",
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "agent": {
    "model_parameters": [],
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    }
  },
  "icon_theme": "Material Icon Theme",
  "git_panel": {
    "dock": "right"
  },
  "base_keymap": "VSCode",
  "file_finder": {
    "modal_width": "medium"
  },
  "vim_mode": false,
  "vim": {
    "enable_vim_sneak": true
  },
  "relative_line_numbers": "enabled",
  "tab_bar": {
    "show": true
  },
  "scrollbar": {
    "show": "never"
  },
  "tabs": {
    "show_diagnostics": "errors"
  },
  "inlay_hints": {
    "enabled": true
  },
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  "ssh_connections": [
    {
      "host": "server",
      "username": "rishabh",
      "args": [],
      "projects": [
        {
          "paths": ["/home/rishabh"]
        },
        {
          "paths": ["/mnt/Docker/Docker/Docker-Media-Template"]
        }
      ]
    }
  ],
  "ui_font_size": 16.0,
  "buffer_font_size": 20.0,
  "theme": "Ayu Dark",
  "languages": {
    "Python": {
      "formatter": {
        "language_server": {
          "name": "ruff"
        }
      },
      "language_servers": ["pyright", "ruff"]
    },
    "Nix": {
      "language_servers": ["nil", "!nixd"],
      "formatter": {
        "external": {
          "command": "nixpkgs-fmt",
          "arguments": []
        }
      },
      "format_on_save": "on",
      "tab_size": 2,
      "hard_tabs": false
    }
  },
  "lsp": {
    "nil": {
      "initialization_options": {
        "formatting": {
          "command": ["nixpkgs-fmt"]
        },
        "nix": {
          "flake": {
            "autoArchive": true
          }
        }
      }
    }
  },
  "file_types": {
    "Nix": ["nix", "*.nix"],
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "project_panel": {
    "hide_gitignore": false,
    "button": true,
    "dock": "left",
    "git_status": true
  },
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  },
  "auto_install_extensions": {
    "nix": true
  },
  "buffer_font_family": "Hack Nerd Font Mono",
  "ui_font_family": "Noto Sans"
}
